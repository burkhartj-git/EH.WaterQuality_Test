@using EHWaterQuality.ViewModels
@model RequestDeleteViewModel
@{
    ViewBag.Title = "Delete Request";
}

<!-- BEGIN PAGE CONTENT -->
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row">
        @if (Model.ShowMessage == true)
        {
            <div class='col-md-12'><h2 style='color:red'>@Html.DisplayFor(m => m.Message)</h2></div>
        }
        <br />
        <br />
    </div>
    <div class="row">
        @using (Html.BeginForm("Delete", "Request", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
        {
            <div class="row">
                <label class="control-label col-md-2">Request Group</label>
                <div class="col-md-6">
                    @Html.DisplayFor(m => m.RequestGroup)
                    @Html.HiddenFor(m => m.RequestGroup)
                    @Html.HiddenFor(m => m.RequestID)
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <label class="control-label col-md-2">Location Group</label>
                <div class="col-md-6">
                    @Html.DisplayFor(m => m.LocationGroup)
                    @Html.HiddenFor(m => m.LocationGroup)
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <label class="control-label col-md-2">Test Group</label>
                <div class="col-md-6">
                    @Html.DisplayFor(m => m.TestGroup)
                    @Html.HiddenFor(m => m.TestGroup)
                </div>
            </div>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <button type="submit" class="btn blue">Delete</button>
                    <button type="button" class="btn blue" id="back">Back</button>
                </div>
            </div>
        }
    </div>
    @section PageLevelScripts {
        <script>
            $(document).ready(function () {
                $("#back").on('click', function () {
                    var model = @Html.Raw(Json.Encode(Model));
                    var id = model.RequestID;
                    var url = '@Url.Action("Index", "Request", new { ID = "_id_" })'.replace('_id_', id);
                    window.location.href = url;
                })
            })
        </script>
    }
</body>
</html>
<!-- END PAGE CONTENT -->
