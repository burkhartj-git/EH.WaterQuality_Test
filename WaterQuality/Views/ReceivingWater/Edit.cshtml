@using EHWaterQuality.ViewModels
@model ReceivingWaterEditViewModel
@{
    ViewBag.Title = "Edit / New Receiving Water";
}

<!-- BEGIN PAGE CONTENT -->
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row">
        @using (Html.BeginForm("Edit", "ReceivingWater", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
        {
            <div class="row">
                <label class="control-label col-md-2"><span class="required">* </span>Receiving Water Description</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.ReceivingWaterDescription)
                    <span style="color:red">@Html.ValidationMessageFor(model => model.ReceivingWaterDescription)</span>
                    @Html.HiddenFor(model => model.ReceivingWaterID)
                    @if (Model.ShowMessageDescription == true)
                    {
                        <span style="color:red">@Html.DisplayFor(m => m.MessageDescription)</span>
                    }
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <button type="submit" class="btn blue">Save</button>
                    <button type="button" class="btn blue" id="back">Back</button>
                </div>
            </div>
        }
    </div>
    @section PageLevelScripts {
        <script>
            $(document).ready(function () {
                $("#back").on('click', function () {
                    var model = @Html.Raw(Json.Encode(Model));
                    var id = model.ReceivingWaterID;
                    var url = '@Url.Action("Index", "ReceivingWater", new { ID = "_id_" })'.replace('_id_', id);
                    window.location.href = url;
                })
            })
        </script>
    }
</body>
</html>
<!-- END PAGE CONTENT -->